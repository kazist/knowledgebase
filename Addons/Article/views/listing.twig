
{{ set_assets('applications/Knowledgebase/Addons/Article/assets/css/style.css') }}

<div class="block-articles">
    {% if articles|length > 0 %}
        {% for article in articles %}
            <div class="article">

                <a href="{{ generate_url('knowledgebase.articles.detail', {'id': article.id}) }}" title="{{ article.title }}" >
                    {{ article.title|capitalize|raw  }}
                </a>
                {#  {{ articles|striptags|truncate(70)|raw }} #}
                <br>

                <small>
                    <i class="fa fa-clock-o"> Posted On:</i>{{ article.date_created|date('Y-m-d') }} 
                </small>


            </div>
        {% endfor %}
    {% else %}
        No Latest Articles
    {% endif %}
</div>